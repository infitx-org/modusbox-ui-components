{
  "name": "modus-ui-components",
  "version": "1.0.0",
  "description": "ModusBox UI Components",
  "main": "lib",
  "author": {
    "name": "Ivan Annovazzi",
    "email": "ivan@modusbox.com"
  },
  "scripts": {
    "build": "NODE_ENV=production  webpack --config webpack.production.config.js --inline --bail",
    "lint": "esw webpack.config.* src/components --color --fix",
    "lint:watch": "npm run lint -- --watch",
    "prestart": "webpack --config webpack.dll.config.js",
    "postinstall": "node scripts/postinstall.js",
    "prettier": "prettier --single-quote --use-tabs --print-width 120 --trailing-comma es5 --write './**/*.js'",
    "start": "NODE_ENV=development node server.js",
    "test": "jest"
  },
  "jest": {
    "setupFiles": [
      "./test/jestsetup.js"
    ],
    "moduleNameMapper": {
      "ansi-styles": "<rootDir>/node_modules/ansi-styles",
      "jest-matcher-utils": "<rootDir>/node_modules/jest-matcher-utils",
      "^react-(.+)": "<rootDir>/node_modules/react-$1",
      "^react-dom": "<rootDir>/node_modules/react-dom",
      "^react[/](.+)": "<rootDir>/node_modules/react/$1",
      "^react": "<rootDir>/node_modules/react",
      "^views": "<rootDir>/src/views",
      "^icons": "<rootDir>/src/icons",
      "^components": "<rootDir>/src/components",
      "^utils[/](.+)$": "<rootDir>/src/utils/$1",
      "^test[/](.+)": "<rootDir>/test/$1",
      "^.+\\.(css|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx"
    ],
    "roots": [
      "src/test/__specs__"
    ]
  },
  "license": "UNLICENSED",
  "dependencies": {    
    "better-npm-run": "0.0.8",
    "codemirror": "^5.36.0",
    "codemirror-highlight": "^1.1.1",    
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "express": "^4.13.3",
    "fs": "0.0.1-security",    
    "lodash": "^4.12.0",
    "moment": ">= 2.6.0",
    "node-sass": "^4.8.3",    
    "rc-notification": "^3.0.0",
    "react": "15.4.2",
    "react-addons-perf": "^15.4.2",
    "react-addons-shallow-compare": "15.4.2",
    "react-day-picker": "^2.1.1",
    "react-dom": "15.4.2",    
    "react-motion": "^0.2.7",
    "react-notify-resize": "^2.0.2",
    "redbox-react": "1.2.2",
    "webpack": "1.14",
    "yargs": "^4.2.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "describe",
      "it",
      "beforeEach",
      "before",
      "after",
      "afterEach"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^6.0.3",
    "babel-core": "^6.7.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-syntax-async-functions": "^6.5.0",
    "babel-plugin-transform-object-rest-spread": "^6.3.13",
    "babel-plugin-transform-regenerator": "^6.24.1",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-runtime": "^6.6.1",
    "babel-eslint": "8.1.1",
    "copy-webpack-plugin": "^2.1.1",
    "css-loader": "^0.15.6",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-babel": "^3.0.0",
    "eslint-plugin-react": "7.7.0",
    "eslint-watch": "^3.1.4",
    "extract-text-webpack-plugin": "^0.9.1",
    "hard-source-webpack-plugin": "^0.4.9",
    "jest": "^22.4.3",
    "json-loader": "^0.5.4",
    "karma-mocha-reporter": "^2.0.4",
    "postcss-extend": "^1.0.1",
    "postcss-import": "^7.0.0",
    "postcss-loader": "^0.6.0",
    "postcss-mixins": "^1.0.0",
    "postcss-nested": "^1.0.0",
    "postcss-scss": "^1.0.4",
    "postcss-simple-vars": "^1.0.1",
    "prop-types": "^15.6.1",
    "raw-loader": "^0.5.1",
    "react-hot-loader": "1.3.1",
    "prettier": "^1.11.1",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.12.4",
    "svg-inline-loader": "^0.4.1",
    "svg-sprite-loader": "0.0.19",
    "url-loader": "^0.5.6",    
    "webpack-dev-middleware": "^1.4.0",
    "webpack-hot-middleware": "^2.9.1"    
  }
}
